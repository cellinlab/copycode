{
  "name": "copycode",
  "displayName": "CopyCode",
  "description": "Copy the code in the selected file or folder as markdown format.",
  "version": "0.0.1",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "extension.copyCodeAsMD",
      "title": "Copy Code as Markdown"
    }],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyCodeAsMD",
          "when": "resourceFilename =~ /.*$/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
